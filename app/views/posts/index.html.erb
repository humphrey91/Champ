<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-scroll">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.published %></td>
        <td>
          <%= link_to post, title: "show" do %>
            <i class="icon icon-search"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_post_path(post), title: "edit" do %>
            <i class="icon icon-edit"></i>
          <% end %>
        </td>
        <td>
          <%= link_to post, method: :delete, title: "delete", data: { confirm: 'Are you sure?' } do %>
            <i class="icon icon-delete"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>
